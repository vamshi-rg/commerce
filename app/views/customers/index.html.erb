<!DOCTYPE html>
<html>
<head>
<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
}
th {
    text-align: left;
    background-color:#00b38f
}

tr:nth-child(even){background-color: #99ffeb}
tr:hover{background-color:#d6d6c2}
</style>
</head>

<body>

<table style="width:100%">
	<caption><h2>List of Customers</h2></caption>
  <tr>
  	<th>Id</th>
    <th>Customer Name</th>
    <th>Email</th>
    <th>City</th>
    <th>Pincode</th>
    <th colspan="2">Operations</th>
    
  </tr>

  <% @customers.each do |c| %>   
    <tr>
	    <td> <%= link_to c[:id], customer_path(c), method: :get %></td>
	    <td> <%= c[:name] %></td>
	    <td> <%= c[:email] %></td>
	    <td> <%= c[:city] %></td>
	    <td> <%= c[:pincode] %></td>
		  <td><%= link_to image_tag("Edit_Icon_16.png"), edit_customer_path(c), method: :get %></td>
		  <td><%= button_to "Delete Customer", customer_path(c), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>

</table>
<p><%= link_to "Create new Customer", { action: "new" } %></p>
<p><%= link_to "Place an order", { action: "order" } %></p>
</body>
</html>
